<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netstandard2.0</TargetFramework>
    <Authors>Michael Monsour</Authors>
    <Copyright>Copyright Â© Michael Monsour 2021-2022</Copyright>
    <PackageLicenseExpression>LGPL-3.0-only</PackageLicenseExpression>
    <PackageProjectUrl>https://github.com/lethek/FFmpeg.Loader</PackageProjectUrl>
    <RepositoryUrl>https://github.com/lethek/FFmpeg.Loader</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>ffmpeg loader media audio video</PackageTags>
    <Description>Finds and loads FFmpeg libraries with the FFmpeg.AutoGen bindings.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <LangVersion>latest</LangVersion>
  </PropertyGroup>

  <ItemGroup>
    <InternalsVisibleTo Include="FFmpeg.Loader.Tests" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="FFmpeg.AutoGen" Version="4.4.1.1" />
    <PackageReference Include="System.Collections.Immutable" Version="7.0.0" />
    <PackageReference Include="System.IO.Abstractions" Version="19.2.51" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\..\README.md" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
